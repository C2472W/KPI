<?xml version="1.0" encoding="utf-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <lifecycle>
        <phase-listener>
            cn.hanbell.kpi.web.SignCheck
        </phase-listener>
    </lifecycle>
    <name>primefaces_ultima</name>
    <component>
        <component-type>org.primefaces.component.UltimaMenu</component-type>
        <component-class>org.primefaces.ultima.component.menu.UltimaMenu</component-class>
    </component>
    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.UltimaMenuRenderer</renderer-type>
            <renderer-class>org.primefaces.ultima.component.menu.UltimaMenuRenderer</renderer-class>
        </renderer>
    </render-kit>
    <application>
        <action-listener>
            org.primefaces.application.DialogActionListener
        </action-listener>
        <navigation-handler>
            org.primefaces.application.DialogNavigationHandler
        </navigation-handler>
        <view-handler>
            org.primefaces.application.DialogViewHandler
        </view-handler>
    </application>
    <navigation-rule>
        <description>入口导航</description>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>resetPwd</from-outcome>
            <to-view-id>/resetPwd.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>404</from-outcome>
            <to-view-id>/404.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>deny</from-outcome>
            <to-view-id>/deny.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/error.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>系统模块一级导航</description>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>systemrole</from-outcome>
            <to-view-id>/sys/systemrole.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>rolegrant</from-outcome>
            <to-view-id>/sys/rolegrant.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>usergrant</from-outcome>
            <to-view-id>/sys/usergrant.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>基础模块一级导航</description>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>companygrant</from-outcome>
            <to-view-id>/app/bd/companygrant.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indicator</from-outcome>
            <to-view-id>/app/bd/indicator.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indicatordefine</from-outcome>
            <to-view-id>/app/bd/indicatordefine.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indicatorinit</from-outcome>
            <to-view-id>/app/bd/indicatorinit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indicatorset</from-outcome>
            <to-view-id>/app/bd/indicatorset.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indicatortree</from-outcome>
            <to-view-id>/app/bd/indicatortree.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>指标定义</description>
        <from-view-id>/app/bd/indicatordefine.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>indicatordefineNew</from-outcome>
            <to-view-id>/app/bd/indicatordefineNew.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indicatordefineEdit</from-outcome>
            <to-view-id>/app/bd/indicatordefineEdit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indicatordefineView</from-outcome>
            <to-view-id>/app/bd/indicatordefineView.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>指标设置</description>
        <from-view-id>/app/bd/indicatorset.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>indicatorsetNew</from-outcome>
            <to-view-id>/app/bd/indicatorsetNew.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indicatorsetEdit</from-outcome>
            <to-view-id>/app/bd/indicatorsetEdit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indicatorsetView</from-outcome>
            <to-view-id>/app/bd/indicatorsetView.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>指标关系</description>
        <from-view-id>/app/bd/indicatortree.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>indicatortreeNew</from-outcome>
            <to-view-id>/app/bd/indicatortreeNew.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indicatortreeEdit</from-outcome>
            <to-view-id>/app/bd/indicatortreeEdit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indicatortreeView</from-outcome>
            <to-view-id>/app/bd/indicatortreeView.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>模态开窗</description>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>departmentSelect</from-outcome>
            <to-view-id>/app/df/departmentSelect.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>sysuserSelect</from-outcome>
            <to-view-id>/app/df/sysuserSelect.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>